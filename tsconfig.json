{
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@entity/*": [
                "./src/database/entity/*"
            ],
            "@middlewares/*": [
                "./src/middlewares/*"
            ],
            "@routes/*": [
                "./src/routes/*"
            ],
            "@interfaces/*": [
                "./src/interfaces/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}